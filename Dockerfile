FROM ubuntu
RUN apt update && apt install git curl sudo -y
RUN curl -LO "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl" && curl -LO "https://dl.k8s.io/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl.sha256" && sudo install -o root -g root -m 0755 kubectl /usr/local/bin/kubectl

